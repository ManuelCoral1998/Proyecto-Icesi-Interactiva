<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ProjectList">


    <LinearLayout
        android:id="@+id/linear_proyectos"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/welcome"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_proyectos"
            android:layout_width="320dp"
            android:layout_height="110dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="¿POR DONDÉ QUIERES COMENZAR?"
            android:textColor="@color/colorSubAccent"
            android:textSize="30dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSubAccent"
        >

    </ListView>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/navigation_project"
        app:menu="@menu/menu_bar">
    </android.support.design.widget.BottomNavigationView>



</LinearLayout>